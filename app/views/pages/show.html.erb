<div class="row">
  <div class="span12">
    <h1><%= best_in_place @page, :title, path: [@page.application, @page]%></h1>
    <div class="well">
      <p>
      <%= best_in_place @page, :description, 
        path: [@page.application, @page],
        type: :textarea%>
      </p>
    </div>
  </div>
</div>

<div class="page">
  <div class="main">
    <%= image_tag @page.image.url(:page), id: "page-image"%>
    <br/>
    <%= best_in_place @page, :remote_image_url, 
      path: [@page.application, @page],
      activator: "#page-image", nil: ' '%>
    <div class="footer">
      <%= best_in_place @page, :footer,
        path: [@page.application, @page],
        type: :textarea%>
    </div>
  </div>
  <aside> 
    <%= best_in_place @page, :sidebar,
      path: [@page.application, @page],
      type: :textarea%>
  </aside>
</div>
